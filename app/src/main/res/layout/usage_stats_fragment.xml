<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:paddingBottom="20dp">

        <LinearLayout
            android:id="@+id/usageTextViwesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/totalUsageTimeCaptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="App usage"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="24sp"
                android:paddingRight="5dp"/>

            <TextView
                android:id="@+id/totalUsageTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="TextView"
                android:textColor="?attr/colorAccent"
                android:textSize="24sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/unlocksTextViewsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/usageTextViwesLayout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/unlockCountsCaptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="end"
                android:text="@string/unlocks_count_text_view_caption"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/unlocksCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="TextView"
                android:textColor="?attr/colorAccent"
                android:textSize="20sp"/>
        </LinearLayout>

    </RelativeLayout>

    <ListView
        android:id="@+id/usageStatsListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="0dp"/>

</LinearLayout>